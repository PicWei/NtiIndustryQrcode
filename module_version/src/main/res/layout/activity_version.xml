<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.VersionActivity">
        <com.nti.lib_common.view.CommonTitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="版本更新"
            app:is_refresh_visible="false"
            app:is_right_visible="false" />
        <ImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:src="@mipmap/update_logo"
            app:layout_constraintTop_toBottomOf="@+id/title_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/version_explain"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <com.ruffian.library.widget.RLinearLayout
            android:id="@+id/rr_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="21dp"
            android:orientation="vertical"
            app:corner_radius="5dp"
            app:shadow_color="#333581ee"
            app:shadow_radius="5dp"
            app:shadow_dy="2dp"
            app:background_normal="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/version_explain"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <com.ruffian.library.widget.RRelativeLayout
                android:id="@+id/rr_curversion"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:layout_constraintRight_toRightOf="parent">
                <TextView
                    android:id="@+id/cur_version_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="当前版本:"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:id="@+id/cur_version_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"/>
            </com.ruffian.library.widget.RRelativeLayout>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />
            <com.ruffian.library.widget.RRelativeLayout
                android:id="@+id/rr_lastversion"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:id="@+id/last_version_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="最新版本:"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:id="@+id/last_version_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"/>
            </com.ruffian.library.widget.RRelativeLayout>
        </com.ruffian.library.widget.RLinearLayout>

        <com.ruffian.library.widget.RTextView
            android:id="@+id/update_btn"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:text="更新"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            app:corner_radius="5dp"
            app:background_normal="#ff0083f5"
            app:background_pressed="#260083f5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
