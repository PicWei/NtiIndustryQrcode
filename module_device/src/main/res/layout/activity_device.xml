<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F6F9"
        tools:context=".activity.DeviceActivity">
        <com.nti.lib_common.view.CommonTitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="设备设置"
            app:is_refresh_visible="false"
            app:is_right_visible="false" />
        <TextView
            android:id="@+id/device_message_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备信息"
            android:textSize="16sp"
            android:textColor="#ff0083f5"
            app:layout_constraintTop_toBottomOf="@+id/title_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp" />
        <com.ruffian.library.widget.RConstraintLayout
            android:id="@+id/device_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            app:corner_radius="5dp"
            app:background_normal="@color/white"
            app:shadow_color="#333581ee"
            app:shadow_radius="5dp"
            app:shadow_dy="3dp"
            app:shadow_dx="2dp"
            app:layout_constraintTop_toBottomOf="@+id/device_message_label">
            <TextView
                android:id="@+id/device_name_label"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="设备名称"
                android:textColor="#ff333333"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="15dp"/>
            <EditText
                android:id="@+id/device_name_et"
                android:layout_width="160dp"
                android:layout_height="44dp"
                android:gravity="center_vertical|right"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:visibility="gone"
                android:background="@null"
                android:layout_marginRight="15dp"/>
            <TextView
                android:id="@+id/device_name_tv"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:gravity="center|right"
                android:textColor="#ff333333"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="15dp"/>
            <View
                android:id="@+id/view01"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffdddddd"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@+id/device_name_label"/>
            <TextView
                android:id="@+id/device_model_label"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:textColor="#ff333333"
                android:gravity="center_vertical"
                android:text="设备型号"
                android:layout_marginLeft="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view01"/>
            <TextView
                android:id="@+id/device_model_tv"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:gravity="center|right"
                android:layout_marginRight="15dp"
                android:textColor="#ff333333"
                app:layout_constraintTop_toBottomOf="@+id/view01"
                app:layout_constraintLeft_toRightOf="@+id/device_model_label"
                app:layout_constraintRight_toRightOf="parent"/>
            <View
                android:id="@+id/view04"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffdddddd"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@+id/device_model_tv"/>
            <TextView
                android:id="@+id/mac_address_label"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="MAC地址"
                android:gravity="center_vertical"
                android:textColor="#ff333333"
                app:layout_constraintTop_toBottomOf="@+id/view04"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/mac_address_tv"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:textColor="#ff333333"
                app:layout_constraintTop_toBottomOf="@+id/view04"
                android:gravity="center|right"
                app:layout_constraintLeft_toRightOf="@+id/mac_address_label"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="15dp"/>

            <View
                android:id="@+id/view02"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffdddddd"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@+id/mac_address_label"/>
            <TextView
                android:id="@+id/ip_address_label"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="IP地址"
                android:textColor="#ff333333"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@+id/view02"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/ip_address_tv"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:textColor="#ff333333"
                app:layout_constraintTop_toBottomOf="@+id/view02"
                android:gravity="center|right"
                app:layout_constraintLeft_toRightOf="@+id/ip_address_label"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="15dp"/>
        </com.ruffian.library.widget.RConstraintLayout>
        <com.ruffian.library.widget.RTextView
            android:id="@+id/confirm_btn"
            android:layout_width="240dp"
            android:layout_height="44dp"
            android:text="确认"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:corner_radius="5dp"
            app:background_normal="#ff0083f5"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="30dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
