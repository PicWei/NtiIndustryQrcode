<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">
    <RelativeLayout
        android:id="@+id/my_head"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@mipmap/my_head">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="14dp">
            <com.ruffian.library.widget.RTextView
                android:id="@+id/rr_title"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="我的"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <com.ruffian.library.widget.RImageView
            android:id="@+id/image"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="93dp"
            android:src="@mipmap/portrait"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赵晓美"
            android:layout_toRightOf="@+id/image"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/image"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:layout_alignBottom="@+id/image"
            android:layout_marginLeft="10dp">
            <ImageView
                android:id="@+id/department_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/rectangle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卷包车间"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:textColor="#ffffcc88"/>
        </FrameLayout>
    </RelativeLayout>
    <com.ruffian.library.widget.RConstraintLayout
        android:id="@+id/my_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:corner_radius_top_left="20dp"
        app:corner_radius_top_right="20dp"
        android:layout_marginTop="172dp"
        app:background_normal="@color/white">
        <RelativeLayout
            android:id="@+id/rr_parameter"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:background="#fffffcf8"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/rr_device"
            app:layout_constraintLeft_toLeftOf="parent">
            <ImageView
                android:id="@+id/parameter_iv"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:src="@mipmap/parameter"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="参数设置"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_below="@+id/parameter_iv"
                android:layout_marginTop="11dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rr_device"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:background="#fff8fbff"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/rr_parameter"
            app:layout_constraintRight_toLeftOf="@+id/rr_service">
            <ImageView
                android:id="@+id/device_iv"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="19dp"
                android:src="@mipmap/device"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设备管理"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_below="@+id/device_iv"
                android:layout_marginTop="11dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rr_service"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:background="#fff8f8ff"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/rr_device"
            app:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:id="@+id/service_iv"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:src="@mipmap/service"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="服务器设置"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_below="@+id/service_iv"
                android:layout_marginTop="11dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rr_version"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:background="#fff8fffa"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/rr_parameter"
            app:layout_constraintLeft_toLeftOf="@+id/rr_parameter"
            app:layout_constraintRight_toRightOf="@+id/rr_parameter">
            <ImageView
                android:id="@+id/versione_iv"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:src="@mipmap/version"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="版本管理"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_below="@+id/versione_iv"
                android:layout_marginTop="11dp"/>
        </RelativeLayout>

        <com.ruffian.library.widget.RTextView
            android:id="@+id/exit_btn"
            android:layout_width="330dp"
            android:layout_height="44dp"
            android:text="退出登录"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#fff4816e"
            app:corner_radius="5dp"
            app:background_normal="#fffff2f0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </com.ruffian.library.widget.RConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>