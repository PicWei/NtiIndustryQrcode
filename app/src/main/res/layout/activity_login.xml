<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.LoginActivity"
        android:background="@color/white">
        <ImageView
            android:id="@+id/login_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@mipmap/login_logo"
            android:layout_width="360dp"
            android:layout_height="266dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/login_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="4.5dp"
            android:text="卷烟打扫码系统"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <com.ruffian.library.widget.RRelativeLayout
            android:id="@+id/rl_account"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="280dp"
            android:layout_marginTop="28.5dp"
            android:layout_height="44dp"
            app:background_normal="#fffafafa"
            app:corner_radius="8dp"
            app:border_color_normal="#ffd9d9d9"
            app:border_width_normal="1dp">
            <ImageView
                android:id="@+id/user_logo"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/user"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"/>
            <EditText
                android:textColorHint="#9DA9A5"
                android:textSize="16sp"
                android:gravity="center|left"
                android:hint="请输入账号"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/user_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"/>

        </com.ruffian.library.widget.RRelativeLayout>

        <com.ruffian.library.widget.RRelativeLayout
            android:id="@+id/rl_pwd"
            app:layout_constraintTop_toBottomOf="@+id/rl_account"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="280dp"
            android:layout_marginTop="20dp"
            android:layout_height="44dp"
            app:background_normal="#fffafafa"
            app:corner_radius="8dp"
            app:border_color_normal="#ffd9d9d9"
            app:border_width_normal="1dp">
            <ImageView
                android:id="@+id/psw_logo"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/pwd"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"/>
            <EditText
                android:inputType="textPassword"
                android:textColorHint="#9DA9A5"
                android:textSize="16sp"
                android:gravity="center|left"
                android:hint="请输入密码"
                android:layout_toRightOf="@+id/psw_logo"
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"/>

        </com.ruffian.library.widget.RRelativeLayout>
        <TextView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/rl_pwd"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            android:text="服务器设置"
            android:textColor="#0083F5 "/>
        <com.ruffian.library.widget.RRelativeLayout
            android:id="@+id/rl_login"
            app:layout_constraintTop_toBottomOf="@+id/setting"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="280dp"
            android:layout_marginTop="24dp"
            android:layout_height="44dp"
            app:corner_radius="8dp"
            app:background_normal="#ff0083f5"
            app:background_pressed="#260083f5">
            <TextView
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="登录"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.ruffian.library.widget.RRelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
