<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment"
    android:background="#F3F6F9">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">
        <com.ruffian.library.widget.RTextView
            android:id="@+id/rr_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="首页"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/rl_title">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.ruffian.library.widget.RRelativeLayout
                android:id="@+id/rr_xscc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:background_normal="@mipmap/xscc02"
                app:corner_radius="5dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/xsch"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="18dp"
                    android:src="@mipmap/xscc_logo" />

                <TextView
                    android:id="@+id/xscc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工业销售出厂"
                    android:layout_toRightOf="@+id/xsch"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <com.ruffian.library.widget.RRelativeLayout
                    android:layout_width="75dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="30dp"
                    app:corner_radius="15dp"
                    app:background_normal="#d9ffffff">
                    <TextView
                        android:id="@+id/enter_tv"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="进入"
                        android:layout_centerVertical="true"
                        android:textSize="15sp"
                        android:layout_marginLeft="12dp"
                        android:textColor="#ff57affd"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:src="@mipmap/arrow_3"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/enter_tv"
                        android:layout_marginLeft="14dp"/>
                </com.ruffian.library.widget.RRelativeLayout>
            </com.ruffian.library.widget.RRelativeLayout>

            <com.ruffian.library.widget.RRelativeLayout
                android:id="@+id/rr_thrk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:background_normal="@mipmap/thrk"
                app:corner_radius="5dp"
                app:layout_constraintTop_toBottomOf="@+id/rr_xscc">
                <ImageView
                    android:id="@+id/thrk_iv"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@mipmap/gythrk_logo"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="28dp"/>
                <TextView
                    android:id="@+id/thrk_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工业退货入库"
                    android:layout_toRightOf="@+id/thrk_iv"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <com.ruffian.library.widget.RRelativeLayout
                    android:layout_width="75dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="30dp"
                    app:corner_radius="15dp"
                    app:background_normal="#d9ffffff">
                    <TextView
                        android:id="@+id/enter_tv2"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="进入"
                        android:layout_centerVertical="true"
                        android:textSize="15sp"
                        android:layout_marginLeft="12dp"
                        android:textColor="#FF922C"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:src="@mipmap/arrow_1"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/enter_tv2"
                        android:layout_marginLeft="14dp"/>
                </com.ruffian.library.widget.RRelativeLayout>
            </com.ruffian.library.widget.RRelativeLayout>

            <com.ruffian.library.widget.RRelativeLayout
                android:id="@+id/rr_ykck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:background_normal="@mipmap/ykck"
                app:corner_radius="5dp"
                app:layout_constraintTop_toBottomOf="@+id/rr_thrk">
                <ImageView
                    android:id="@+id/ykck_iv"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@mipmap/gyykck_logo"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="28dp"/>
                <TextView
                    android:id="@+id/ykck_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工业移库出库"
                    android:layout_toRightOf="@+id/ykck_iv"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <com.ruffian.library.widget.RRelativeLayout
                    android:layout_width="75dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="30dp"
                    app:corner_radius="15dp"
                    app:background_normal="#d9ffffff">
                    <TextView
                        android:id="@+id/enter_tv3"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="进入"
                        android:layout_centerVertical="true"
                        android:textSize="15sp"
                        android:layout_marginLeft="12dp"
                        android:textColor="#ff506094"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:src="@mipmap/arrow_5"
                        android:textColor="#ffff8d26"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/enter_tv3"
                        android:layout_marginLeft="14dp"/>
                </com.ruffian.library.widget.RRelativeLayout>
            </com.ruffian.library.widget.RRelativeLayout>

            <com.ruffian.library.widget.RRelativeLayout
                android:id="@+id/rr_ykrk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:background_normal="@mipmap/ykrk"
                app:corner_radius="5dp"
                app:layout_constraintTop_toBottomOf="@+id/rr_ykck">
                <ImageView
                    android:id="@+id/ykrk_iv"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@mipmap/gyykrk_logo"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="28dp"/>
                <TextView
                    android:id="@+id/ykrk_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工业移库入库"
                    android:layout_toRightOf="@+id/ykrk_iv"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <com.ruffian.library.widget.RRelativeLayout
                    android:layout_width="75dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="30dp"
                    app:corner_radius="15dp"
                    app:background_normal="#d9ffffff">
                    <TextView
                        android:id="@+id/enter_tv4"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="进入"
                        android:layout_centerVertical="true"
                        android:textSize="15sp"
                        android:layout_marginLeft="12dp"
                        android:textColor="#ff00a676"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:src="@mipmap/arrow_2"
                        android:textColor="#ffff8d26"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/enter_tv4"
                        android:layout_marginLeft="14dp"/>
                </com.ruffian.library.widget.RRelativeLayout>
            </com.ruffian.library.widget.RRelativeLayout>

            <com.ruffian.library.widget.RRelativeLayout
                android:id="@+id/rr_dhrk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:background_normal="@mipmap/ykrk"
                app:corner_radius="5dp"
                app:layout_constraintTop_toBottomOf="@+id/rr_ykrk">
                <ImageView
                    android:id="@+id/dhrk_iv"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@mipmap/gydhrk_logo"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="28dp"/>
                <TextView
                    android:id="@+id/dhrk_tv"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:text="工业合作生产到货入库"
                    android:layout_toRightOf="@+id/dhrk_iv"
                    android:gravity="bottom"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <com.ruffian.library.widget.RRelativeLayout
                    android:layout_width="75dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="30dp"
                    app:corner_radius="15dp"
                    app:background_normal="#d9ffffff">
                    <TextView
                        android:id="@+id/enter_tv5"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="进入"
                        android:layout_centerVertical="true"
                        android:textSize="15sp"
                        android:layout_marginLeft="12dp"
                        android:textColor="#ff00a676"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:src="@mipmap/arrow_2"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/enter_tv5"
                        android:layout_marginLeft="14dp"/>
                </com.ruffian.library.widget.RRelativeLayout>
            </com.ruffian.library.widget.RRelativeLayout>

            <com.ruffian.library.widget.RRelativeLayout
                android:id="@+id/rr_thck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:background_normal="@mipmap/thrk"
                app:corner_radius="5dp"
                app:layout_constraintTop_toBottomOf="@+id/rr_dhrk">
                <ImageView
                    android:id="@+id/thck_iv"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@mipmap/gythck_logo"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="28dp"/>
                <TextView
                    android:id="@+id/thck_tv"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:text="工业合作生产退货出库"
                    android:layout_toRightOf="@+id/thck_iv"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="14dp"
                    android:gravity="bottom"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <com.ruffian.library.widget.RRelativeLayout
                    android:layout_width="75dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="30dp"
                    app:corner_radius="15dp"
                    app:background_normal="#d9ffffff">
                    <TextView
                        android:id="@+id/enter_tv6"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="进入"
                        android:layout_centerVertical="true"
                        android:textSize="15sp"
                        android:layout_marginLeft="12dp"
                        android:textColor="#ffff8d26"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:src="@mipmap/arrow_1"
                        android:textColor="#ffff8d26"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/enter_tv6"
                        android:layout_marginLeft="14dp"/>
                </com.ruffian.library.widget.RRelativeLayout>
            </com.ruffian.library.widget.RRelativeLayout>

            <com.ruffian.library.widget.RRelativeLayout
                android:id="@+id/rr_bf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:background_normal="@mipmap/rkbf"
                app:corner_radius="5dp"
                app:layout_constraintTop_toBottomOf="@+id/rr_thck">
                <ImageView
                    android:id="@+id/bf_iv"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@mipmap/rkbf_logo"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="28dp"/>
                <TextView
                    android:id="@+id/bf_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工业出入库报废"
                    android:layout_toRightOf="@+id/bf_iv"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <com.ruffian.library.widget.RRelativeLayout
                    android:layout_width="75dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="30dp"
                    app:corner_radius="15dp"
                    app:background_normal="#d9ffffff">
                    <TextView
                        android:id="@+id/enter_tv7"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="进入"
                        android:layout_centerVertical="true"
                        android:textSize="15sp"
                        android:layout_marginLeft="12dp"
                        android:textColor="#fff06f59"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:src="@mipmap/arrow_4"
                        android:textColor="#ffff8d26"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/enter_tv7"
                        android:layout_marginLeft="14dp"/>
                </com.ruffian.library.widget.RRelativeLayout>
            </com.ruffian.library.widget.RRelativeLayout>

            <com.ruffian.library.widget.RRelativeLayout
                android:id="@+id/rr_sy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:background_normal="@mipmap/rkbf"
                app:corner_radius="5dp"
                app:layout_constraintTop_toBottomOf="@+id/rr_bf"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="60dp">
                <ImageView
                    android:id="@+id/sy_iv"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@mipmap/sy_logo"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="28dp"/>
                <TextView
                    android:id="@+id/sy_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工业仓库损溢"
                    android:layout_toRightOf="@+id/sy_iv"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <com.ruffian.library.widget.RRelativeLayout
                    android:layout_width="75dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="30dp"
                    app:corner_radius="15dp"
                    app:background_normal="#d9ffffff">
                    <TextView
                        android:id="@+id/enter_tv8"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="进入"
                        android:layout_centerVertical="true"
                        android:textSize="15sp"
                        android:layout_marginLeft="12dp"
                        android:textColor="#fff06f59"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:src="@mipmap/arrow_4"
                        android:textColor="#ffff8d26"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/enter_tv8"
                        android:layout_marginLeft="14dp"/>
                </com.ruffian.library.widget.RRelativeLayout>
            </com.ruffian.library.widget.RRelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>