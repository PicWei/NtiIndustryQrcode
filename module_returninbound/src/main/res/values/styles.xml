        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="minHeight">20dip</item>
        <item name="maxHeight">20dip</item>
    </style>

    <style name="progressbarStyle_Scaned_Horizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_scaned_horizontal</item>
        <item name="minHeight">20dip</item>
        <item name="maxHeight">20dip</item>
    </style>

    <style name="XQRCodeTheme.Custom">
        <item name="ViewfinderViewStyle">@style/ViewfinderView.Custom</item>
    </style>

    <style name="ViewfinderView.Custom">
        <item name="inner_corner_color">@color/colorPrimary</item>
